{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
        "ignore": ["app/entry.client.tsx", "app/entry.server.tsx"],
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "warn",
				"useImportType": "off"
			},
			"complexity": {
				"noForEach": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": true,
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineWidth": 90,
		"lineEnding": "lf",
		"ignore": ["a/pp/data/**/*"]
	},
	"overrides": [
		{
			"include": ["*.jsx", "*.tsx"],
			"formatter": {
                "indentStyle": "space",
				"indentWidth": 2
			}
		}
	]
}
